<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@200;300;400;500;600;700;800&display=swap"
        rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@900&display=swap" rel="stylesheet">
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/capsule-color.css">
    <link rel="stylesheet" href="/css/pb-color.css">
    <script src="/js/jquery.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <title>
        <%=name.english%> | Pokédex
    </title>
</head>

<body>
    <% const id3d=id.toLocaleString('en-US',{minimumIntegerDigits:3, useGrouping:false}) %>

    <div class="row vh-100 d-flex justify-content-center align-items-center mx-0 p-0" id="btnNavig">
        <div class="col p-0">
            <a class="material-symbols-outlined btnNav btnNavL ml-2" id="btnLeft" style="text-decoration:none;" href="/pokemon/<%= id3d > 1 ?parseInt(id3d) - 1:id3d %> ">
                arrow_back_ios
            </a>
        </div class="col p-0">
        <a class="material-symbols-outlined btnNav btnNavR ml-1" id="btnRight" style="text-decoration:none;" href="/pokemon/<%= id3d < 809 ? parseInt(id3d) + 1:id3d %>">
            arrow_forward_ios
        </a>
    </div>

        <nav class="navbar navbar-expand-lg" id="mainNav">
            <span class="navbar-brand" href="#">PokéDex</span>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="#">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Types</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Moves</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">About</a>
                    </li>
                </ul>
            </div>
        </nav>

        <div class="container">
            <div class="row vh-100 d-flex justify-content-center align-items-center">
                <div class="col" id="divMain">
                    <div class="h-100 row d-flex justify-content-center ">
                        <div class="col align-self-center">
                            <div class="row d-flex align-items-center justify-content-center">
                                <div class="col d-flex align-items-center justify-content-center pb-<%=type[0].toLowerCase()%>"
                                    id="divImg">
                                    <img src="/res/images/hires/<%= id3d %>.png" alt="" id="imgPoke">
                                </div>
                            </div>
                        </div>
                        <div class="col px-0" id="colAbout">
                            <div class="d-flex justify-content-start">
                                <h1 id="hMain" class="col-6 p-0">
                                    <%=name.english%>
                                </h1>
                                <h2 id="hID" class="col-6 align-self-center">#<%= id3d %>
                                </h2>
                            </div>

                            <div>
                                <% for (let i=0; i < type.length; i++) {%>
                                    <p class="capsule capsule-<%=type[i].toLowerCase()%> ">
                                        <%= type[i] %>
                                    </p>
                                    <% } %>
                            </div>

                            <div class="d-flex mt-4 justify-content-start">
                                <div class="col-6 px-0">
                                    <h5>Height</h5>
                                    <h6>
                                        <%= profile.height %>
                                    </h6>
                                </div>
                                <div class="col-6 px-0">
                                    <h5>Weight</h5>
                                    <h6>
                                        <%= profile.weight %>
                                    </h6>
                                </div>
                            </div>

                            <div class="d-flex mt-2 justify-content-start">
                                <div class="col px-0">
                                    <h5>Gender ratio</h5>
                                    <% if (profile.gender.trim()==='Genderless' ) {%>
                                        <div class="progress">
                                            <div class="progress-bar" role="progressbar" style="width: 100%"
                                                aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">Genderless
                                            </div>
                                        </div>
                                        <% } else {%>
                                            <% const mrate=profile.gender.split(":")[0] %>
                                                <% const frate=profile.gender.split(":")[1] %>
                                                    <div class="d-flex">
                                                        <div>
                                                            <span class="material-symbols-outlined">male</span>
                                                        </div>
                                                        <div class="progress">
                                                            <div class="progress-bar progressBarMale" role="progressbar"
                                                                style="width: <%= mrate %>%"
                                                                aria-valuenow="<%= mrate %>" aria-valuemin="0"
                                                                aria-valuemax="100">
                                                                <%= mrate %>%
                                                            </div>
                                                            <div class="progress-bar progressBarFemale"
                                                                role="progressbar" style="width: <%= frate %>%"
                                                                aria-valuenow="<%= frate %>" aria-valuemin="0"
                                                                aria-valuemax="100">
                                                                <%= frate %>%
                                                            </div>
                                                        </div>
                                                        <div>
                                                            <span class="material-symbols-outlined">female</span>
                                                        </div>
                                                    </div>
                                                    <% } %>
                                </div>
                            </div>

                            <div class="d-flex mt-4 justify-content-start">
                                <div class="col px-0">
                                    <h5>Species</h5>
                                    <h6>
                                        <%= species%>
                                    </h6>
                                </div>
                            </div>

                            <div class="d-flex mt-2 justify-content-start">
                                <div class="col px-0">
                                    <h5>Description</h5>
                                    <div class="d-flex justify-content-center align-items-center" id="boxDesc">
                                        <div class="overflow-auto">
                                            <p class="mx-1 mt-1">
                                                <%= description %>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</body>

</html>